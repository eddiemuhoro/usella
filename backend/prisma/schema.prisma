model review {
  id           String @id @default(cuid())
  sender_name  String
  sender_image String
  user_id      String
  rating       Int
  comment      String
  sender_email String
  user         user   @relation(fields: [user_id], references: [id])
}

model usellaReviews {
  id      String @id @default(cuid())
  rating  Int
  comment String
  user    user   @relation(fields: [id], references: [id])
}

enum Category {
  ELECTRONICS
  FASHION
  HOME
  BEAUTY
  SPORTS
  BOOKS
  OTHERS
  HEALTH
}

enum Status {
  AVAILABLE
  SOLD
  PENDING
  CONFIRMED
}
