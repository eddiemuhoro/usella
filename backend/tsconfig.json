{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "./dist/",
    "rootDir": "./src/",
    "strict": true,
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "target": "ESNext",
    // "allowImportingTsExtensions": true,
    "noEmit" :false,
    "moduleResolution": "nodenext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,

  },
  "exclude": [
    "node_modules",
    "./node_modules",
    "./node_modules/*",
  ],
}
